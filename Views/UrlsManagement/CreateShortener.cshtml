
@{
    ViewBag.Title = "CreateShortener";
}

<h2>CreateShortener</h2>

@ViewBag.message

<form action="/" method="post">
    <div class="form-group">
        @Html.Label("longUrl", "Long URL: ")
        @Html.TextBox("longUrl", null, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("shortUrl", "Choose a short URL: ")
        @Html.TextBox("shortUrl", null, new { @class = "form-control" })
    </div>
    <input type="submit" name="CreateShortener" value="CreateShortener" class="btn btn-success" formaction="/UrlsManagement/CreateShortener" />
</form>